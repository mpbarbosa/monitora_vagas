# Selenium Docker Testing - Multi-Stage Build
# Provides consistent Chrome/ChromeDriver environment for CI/CD
# Fixes binary detection issues by using official Selenium image

# Stage 1: Selenium base with Chrome pre-configured
FROM selenium/standalone-chrome:latest AS selenium-base

USER root

# Install Python and dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Stage 2: Application with tests
FROM selenium-base AS test-runner

# Copy Python requirements
COPY requirements.txt .
RUN pip3 install --no-cache-dir -r requirements.txt

# Copy application files
COPY public/ ./public/
COPY src/ ./src/
COPY tests/ ./tests/

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV DISPLAY=:99

# Expose port for web server
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/ || exit 1

# Default command: run tests
CMD ["python3", "tests/simple_ui_test.py"]

# Alternative commands (can override):
# docker run <image> python3 tests/test-index-e2e.py
# docker run <image> pytest tests/
