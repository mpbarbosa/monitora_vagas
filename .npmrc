# Ensure package-lock.json is used
package-lock=true

# Audit level for security checks (fail on high/critical vulnerabilities)
audit-level=high

# Engine strict (enforce engines field in package.json)
engine-strict=true

# Legacy peer dependencies (set to false for clean installs)
legacy-peer-deps=false

# Save exact versions for more control (optional)
save-exact=false

# Automatically save dependencies
save=true

# Show progress during install
progress=true
