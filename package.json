{
  "name": "hoteis-sindicais",
  "version": "2.2.0",
  "description": "Modern ES6 web application for trade union hotel search with centralized logging and state management",
  "main": "src/main.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "python3 -m http.server 8080",
    "start": "python3 -m http.server 8080",
    "build": "echo 'Build step - copy files if needed'",
    "test": "python3 tests/simple_ui_test.py",
    "test:api": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/apiClient.test.js",
    "test:api:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/apiClient.test.js --watch",
    "test:api:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/apiClient.test.js --coverage",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/e2e/apiClient.e2e.test.js",
    "test:e2e:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/e2e/apiClient.e2e.test.js --watch",
    "test:e2e:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/e2e/apiClient.e2e.test.js --coverage",
    "test:e2e:local": "TEST_API_URL=http://localhost:3001/api npm run test:e2e",
    "test:all": "npm run test && npm run test:api",
    "test:all:js": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:js:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:version": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/test-semantic-version.test.js",
    "test:version:py": "python3 tests/test_semantic_version.py",
    "test:version:all": "./tests/run-version-tests.sh",
    "test:uc": "./tests/use_cases/run_use_case_tests.sh",
    "test:uc:local": "./tests/use_cases/run_use_case_tests.sh --env local",
    "test:uc:production": "./tests/use_cases/run_use_case_tests.sh --env production",
    "test:uc:both": "./tests/use_cases/run_use_case_tests.sh --env both",
    "test:uc:all": "python3 tests/use_cases/test_all_use_cases.py local",
    "test:uc:all:prod": "python3 tests/use_cases/test_all_use_cases.py production",
    "test:uc:all:both": "python3 tests/use_cases/test_all_use_cases.py both",
    "test:uc:hotels": "python3 tests/use_cases/test_hotel_list_verification.py",
    "test:uc:prod-validation": "python3 tests/use_cases/test_production_validation.py",
    "test:browser:selenium": "python3 tests/use_cases/test_uc005_hotel_list_selenium.py",
    "test:browser:playwright": "python3 tests/use_cases/test_uc005_hotel_list_playwright.py",
    "test:browser:all": "npm run test:browser:selenium && npm run test:browser:playwright",
    "test:browser:selenium:prod": "TEST_BASE_URL=https://www.mpbarbosa.com/vagas/ npm run test:browser:selenium",
    "test:production": "./run-production-tests.sh",
    "test:production:full": "TEST_BASE_URL=https://www.mpbarbosa.com/submodules/monitora_vagas/public/ ./run-production-tests.sh",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "eslint 'src/**/*.js' --fix",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore legacy"
  },
  "keywords": [
    "trade-union",
    "hotels",
    "sindicate",
    "web-app",
    "modern-ui"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^5.3.3",
    "ibira.js": "github:mpbarbosa/ibira.js",
    "selenium-webdriver": "^4.15.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "markdownlint-cli": "^0.46.0",
    "node-fetch": "^3.3.2"
  }
}
