# Environment Configuration Template
# Copy this file to .env for local development
# Note: This is a CLIENT-SIDE app - most config is in src/config/environment.js

# =============================================================================
# Node.js Environment (for testing only)
# =============================================================================
# Environment: development, test, or production
NODE_ENV=development

# =============================================================================
# API Configuration (for Node.js tests only)
# =============================================================================
# API base URL for testing
# Default: Uses production API (https://www.mpbarbosa.com/api)
# Set this to override in tests
TEST_API_URL=http://localhost:3001/api

# API base URL (alternative name)
API_BASE_URL=https://www.mpbarbosa.com/api

# =============================================================================
# Application Configuration (for tests)
# =============================================================================
# Application port for local development server
PORT=8080

# Base URL for browser tests (Selenium/Playwright)
TEST_BASE_URL=http://localhost:8080/public/index.html

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# Rate Limiting
# =============================================================================
# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=10

# =============================================================================
# CORS Configuration (for local API development)
# =============================================================================
CORS_ORIGIN=http://localhost:8080

# =============================================================================
# Optional Services (not currently used)
# =============================================================================
# Database URL (if needed in future)
# DATABASE_URL=

# Email service API key (if needed in future)
# EMAIL_SERVICE_API_KEY=
# EMAIL_FROM=noreply@example.com

# Analytics ID (if needed in future)
# ANALYTICS_ID=

# Error tracking DSN (if needed in future)
# SENTRY_DSN=

# =============================================================================
# Browser Configuration (Query Parameters)
# =============================================================================
# To use local API in browser, add this to URL:
# ?useLocalAPI=true
#
# Example: http://localhost:8080/public/index.html?useLocalAPI=true
